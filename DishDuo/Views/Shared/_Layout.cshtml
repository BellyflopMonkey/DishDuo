<!--JB-->
<!DOCTYPE html>
<html lang="en">
<head>
    <!--JB Meta Tags-->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--JB Title-->
    <title>@ViewData["Title"] - DishDuo</title>
    <!--JB Stylesheets-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DishDuo.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="icon" href="/images/Logo/DishDuoLogo.ico" type="image/x-icon">
    <link rel="stylesheet" href="~/css/jquery-ui.min.css" />
    <!--JB Google Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400&display=swap" rel="stylesheet">

</head>
<body>
    <!--JB Splash Screen-->
    <div class="intro">
        <h1 class="logo-header">
            <img src="~/images/Logo/LogoClean.png" style="width: 30%; height: auto;">DishDuo</img>
            <span class="logo" style="color: #ff1448;"> Plan.</span><span class="logo" style="color: #ff1448;">Cook.</span><span class="logo" style="color: #ff1448;">Share.</span>
        </h1>
    </div>
    <!--JB Header-->
    <header class="position-sticky top-0">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-dark fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/images/Logo/DishDuoLogo.jpg" alt="Logo" style="height:40px; width:40px;">
                    DishDuo
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-pink fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-pink fw-bold" asp-area="" asp-controller="Recipe" asp-action="Index">Recipes</a>
                        </li>

                    </ul>
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <div class="d-flex justify-content-center align-content-center">
                            <div class="text-center">
                                <span class="p-4" id="cartListIcon" class="text-pink" style="margin-right: 20px;">
                                    <i class="fa-solid fa-heart text-pink fs-4"></i>
                                    <div id="showCartList" class="position-absolute shadow rounded p-2 bg-white">
                                    </div>
                                </span>
                            </div>
                        </div>

                        <span style="color: black fw-bold">@User.Identity.Name</span>
                        <a class="nav-link text-pink fw-bold" asp-controller="Account" asp-action="Logout">Logout</a>

                    }
                    else
                    {
                        <div>
                            <a class="nav-link fw-bold text-pink" asp-controller="Account" asp-action="Login">Login</a>
                        </div>
                    }

                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!--JB Footer-->
    <footer class="border-top text-white p-3">
        <div class="container mt-2">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                        <h4>DishDuo</h4>
                        <p>Plan.Cook.Share.</p>
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                        <h4>Contact Us</h4>
                        <div class="mt-3 mb-2">
                            <span><i class="fa-brands fa-facebook fs-5"></i></span>
                            <span class="fs-6 mx-1"> Facebook</span>
                        </div>
                        <div class="mb-2">
                            <span><i class="fa-brands fa-linkedin fs-5"></i></span>
                            <span class="fs-6 mx-1"> LinkedIn</span>
                        </div>
                        <div class="mb-2">
                            <span><i class="fa-brands fa-instagram fs-5"></i></span>
                            <span class="fs-6 mx-1"> Instagram</span>
                        </div>
                        <div class="mb-2">
                            <span><i class="fa-regular fa-envelope fs-5"></i></span>
                            <span class="fs-6 mx-1"> Email</span>
                        </div>
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                        <h4>Address</h4>
                        <pre>235 N National Ave, Fond du Lac, WI 54935</pre>
                    </div>
                </div>
                <div>
                    <h4 class="text-center">Powered By Forkify</h4>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery-ui.min.js"></script>

    @if (User.Identity!.IsAuthenticated)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                getAddedCarts();
                getCartList();
            })
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
